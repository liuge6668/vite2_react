{
  "extends": "stylelint-config-standard-scss",
  "overrides": [
    {
      "files": ["*.js|*.ts|*.jsx|*.tsx"],
      "customSyntax": "postcss-lit"
    }
  ],
  "rules": {
    "declaration-block-single-line-max-declarations": 1
  },
  "ignoredFiles": ["node_modules/**", "dist/**", "build/**", "coverage/**", "public/**"],
  "ignorePath": ".stylelintrcignore"
}
